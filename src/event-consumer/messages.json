{
  "records": {
    "error": {
      "text": ":boom: Uh oh, something went wrong :boom:",
      "attachments": [
        {
          "color": "danger",
          "title": "Documentation",
          "title_link": "https://github.com/amancevice/slack-drive",
          "mrkdwn_in": ["fields"],
          "fields": [
            {
              "title": "${error_name}",
              "value": "${error_message}"
            },
            {
              "title": "Stacktrace",
              "value": "${stack}"
            },
            {
              "title": "Event",
              "value": "${event}"
            }
          ],
          "footer": "Slack | Google Drive",
          "ts": "${ts}"
        }
      ]
    },
    "success": {
      "text": ":sparkles: A new event has been processed :sparkles:",
      "attachments": [
        {
          "color": "good",
          "fields": [
            {
              "title": "Channel",
              "value": "#${channel}",
              "short": true
            },
            {
              "title": "User",
              "value": "@${user}",
              "short": true
            },
            {
              "title": "Event",
              "value": "${event}"
            }
          ],
          "footer": "Slack | Google Drive",
          "mrkdwn_in": ["fields"],
          "title": "${title}",
          "title_link": "https://github.com/amancevice/slack-drive",
          "ts": "${ts}"
        }
      ]
    }
  },
  "responses": {
    "member_joined_channel": {
      "attachments": [
        {
          "color": "good",
          "text": ":sparkles: Welcome to #${channel} :sparkles:\nThis channel has its own private Google Drive folder.\nOnly members of the channel can view its contents.\nInvite other members into this channel to give them access!",
          "mrkdwn_in": [
            "text"
          ],
          "actions": [
            {
              "type": "button",
              "text": "Google Drive",
              "url": "${url}"
            }
          ]
        },
        {
          "color": "warning",
          "text": "*DO NOT SHARE FILES BY LINK IN THIS FOLDER!*\nType `/${cmd} link` to view this message again.",
          "mrkdwn_in": [
            "text"
          ],
          "footer": "Slack | Google Drive",
          "ts": "${ts}"
        }
      ]
    },
    "member_left_channel": {
      "attachments": [
        {
          "color": "warning",
          "text": "Goodbye from #${channel} :wave:\nYou will lose access to this channel's Google Drive folder soon.\nRe-join the channel to gain access again.",
          "mrkdwn_in": [
            "text"
          ],
          "footer": "Slack | Google Drive",
          "ts": "${ts}"
        }
      ]
    },
    "slash_command": {
      "attachments": [
        {
          "color": "good",
          "text": "This channel has its own private Google Drive folder.\nOnly members of the channel can view its contents.\nInvite other members into this channel to give them access!",
          "mrkdwn_in": [
            "text"
          ],
          "actions": [
            {
              "type": "button",
              "text": "Google Drive",
              "url": "${url}"
            }
          ]
        },
        {
          "color": "warning",
          "text": "*DO NOT SHARE FILES BY LINK IN THIS FOLDER!*\nType `/${cmd}` to view this message again.",
          "mrkdwn_in": [
            "text"
          ],
          "footer": "Slack | Google Drive",
          "ts": "${ts}"
        }
      ]
    }
  }
}
