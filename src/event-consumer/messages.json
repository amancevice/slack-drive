{
  "records": {
    "error": {
      "text": ":boom: Uh oh, something went wrong :boom:",
      "attachments": [
        {
          "color": "danger",
          "title": "Documentation",
          "title_link": "https://github.com/amancevice/slack-drive",
          "mrkdwn_in": ["fields"],
          "fields": [
            {
              "title": "${error_name}",
              "value": "${error_message}"
            },
            {
              "title": "Stacktrace",
              "value": "${stack}"
            },
            {
              "title": "Event",
              "value": "${event}"
            }
          ],
          "footer": "Slack | Google Drive",
          "ts": "${ts}"
        }
      ]
    },
    "success": {
      "text": ":sparkles: A new event has been processed :sparkles:",
      "attachments": [
        {
          "color": "good",
          "fields": [
            {
              "title": "Channel",
              "value": "#${channel}",
              "short": true
            },
            {
              "title": "User",
              "value": "@${user}",
              "short": true
            },
            {
              "title": "Event",
              "value": "${event}"
            }
          ],
          "footer": "Slack | Google Drive",
          "mrkdwn_in": ["fields"],
          "title": "${title}",
          "title_link": "https://github.com/amancevice/slack-drive",
          "ts": "${ts}"
        }
      ]
    }
  },
  "responses": {
    "member_joined_channel": {
      "text": ":sparkles: Welcome to ${channel} :sparkles:\nMembers of ${channel} have access to a private Google Drive.\nInvite other members into this channel to give them access!",
      "attachments": [
        {
          "color": "good",
          "text": "Go to ${channel} in Google Drive",
          "mrkdwn_in": [
            "text"
          ],
          "actions": [
            {
              "style": "primary",
              "type": "button",
              "text": "Google Drive",
              "url": "${url}"
            }
          ]
        },
        {
          "color": "danger",
          "mrkdwn_in": [
            "text"
          ],
          "text": "Use the `/${cmd}` command to access this channel's Google Drive folder\n`/${cmd} help` will show this message\n`/${cmd} link` will fetch the link to Google Drive\n*Do not share files by link in this folder!*",
          "footer": "Slack | Google Drive",
          "ts": "${ts}"
        }
      ]
    },
    "member_left_channel": {
      "attachments": [
        {
          "color": "warning",
          "text": "Goodbye from ${channel} :wave:\nYou will lose access to this channel's Google Drive folder soon.\nRe-join the channel to gain access again.",
          "mrkdwn_in": [
            "text"
          ],
          "footer": "Slack | Google Drive",
          "ts": "${ts}"
        }
      ]
    }
  }
}
